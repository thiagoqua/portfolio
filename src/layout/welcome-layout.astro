<script is:inline>
  const theme = localStorage.getItem('theme');
  const body = document.body;

  if(theme) {
    const tchanger = document.getElementById('toggle');

    if(theme === 'light'){
      tchanger.checked = false;
      body.classList.toggle('light');
    }
    else 
      tchanger.checked = true;
  }
  else 
    tchanger.checked = true;
</script>
